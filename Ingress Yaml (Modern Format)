apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: myonlinestore-ingress
  namespace: default
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
spec:
  ingressClassName: nginx  # Only needed if you're using multiple Ingress controllers
  tls:
    - hosts:
        - myonlinestore.com
      secretName: tls-secret  # Pre-created TLS secret
  rules:
    - host: myonlinestore.com
      http:
        paths:
          - path: /wear
            pathType: Prefix
            backend:
              service:
                name: wear-service
                port:
                  number: 80
          - path: /watch
            pathType: Prefix
            backend:
              service:
                name: watch-service
                port:
                  number: 80
